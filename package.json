{
  "name": "chork",
  "version": "0.1.0",
  "description": "Minimalist JS data type checking utility.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": {
    "name": "Romullo",
    "email": "developermarsh@gmail.com",
    "url": "https://hiukky.com"
  },
  "bugs": {
    "url": "https://github.com/hiukky/chork/issues"
  },
  "homepage": "https://github.com/hiukky/chork#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/hiukky/chork"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "esbuild index.ts --outfile=dist/index.js --bundle --platform=node --minify",
    "dev": "tsnd --respawn index.ts",
    "postbuild": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"**/*.ts\"",
    "start:dev": "tsnd --respawn --cls index.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "@types/type-check": "^0.3.27",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "esbuild": "^0.12.15",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "import": "{ createStore }",
      "limit": "500 ms"
    }
  ],
  "files": [
    "dist"
  ],
  "keywords": [
    "nodejs",
    "types",
    "typeof",
    "typechecker"
  ]
}
